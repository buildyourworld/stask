#screen
	#this-carousel-id.carousel.slide
		.carousel-inner
			.item.active
				= image_tag("whisper.jpg", :alt => "whisper feed", :width => 1300,:height => 650)
				- flash.each do |name, msg|
					= content_tag :div, msg, class: "alert"
				.carousel-caption
					%p#catchphrase Share info share tips
			.item
				%img{:alt => "", :src => "http://placehold.it/1300x600"}/
				.carousel-caption
					%p Caption text here
			.item
				%img{:alt => "", :src => "http://placehold.it/1300x600"}/
